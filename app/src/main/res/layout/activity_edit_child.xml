<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditChildActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <View
            android:id="@+id/focus_thief"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F3F2F2"
            android:elevation="4dp"
            android:id="@+id/top">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/nav_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_arrow_back_black_28dp"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Edit Child"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/nav_back"
                android:textColor="#000000"/>



        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#A8F5F2F2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child Details"
                    android:textSize="18dp"
                    android:layout_marginTop="19dp"
                    android:textAllCaps="true"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center_vertical">

                <TextView
                    android:background="#51F1F1F1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="*First Name"
                    android:layout_weight="2"
                    android:textAlignment="viewEnd"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    />

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:hint="First Name"
                    android:focusable="true"
                    android:textSize="15dp"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center_vertical">

                <TextView
                    android:background="#51F1F1F1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="*Last Name"
                    android:layout_weight="2"
                    android:textAlignment="viewEnd"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:focusable="true"
                    android:hint="Last Name"
                    android:textSize="15dp"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center_vertical">

                <TextView
                    android:background="#51F1F1F1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Unit No."
                    android:layout_weight="2"
                    android:textAlignment="viewEnd"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    />

                <EditText
                    android:id="@+id/unit_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="Unit No."
                    android:paddingLeft="5dp"
                    android:focusable="true"
                    android:textSize="15dp"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center_vertical">

                <TextView
                    android:background="#51F1F1F1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Code"
                    android:layout_weight="2"
                    android:textAlignment="viewEnd"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    />

                <EditText
                    android:id="@+id/code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:hint="Code"
                    android:focusable="true"
                    android:textSize="15dp"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center_vertical">

                <TextView
                    android:background="#51F1F1F1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="*Date of Birth"
                    android:layout_weight="2"
                    android:textAlignment="viewEnd"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    />

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="Date of Birth"
                    android:paddingLeft="5dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textSize="15dp"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center_vertical">

                <TextView
                    android:background="#51F1F1F1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="NHS Number"
                    android:layout_weight="2"
                    android:textAlignment="viewEnd"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    />

                <EditText
                    android:id="@+id/nhs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:hint="NHS Number"
                    android:textSize="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center_vertical">

                <TextView
                    android:background="#51F1F1F1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Gender"
                    android:layout_weight="2"
                    android:textAlignment="viewEnd"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    />

                <EditText
                    android:id="@+id/gender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:hint="Gender"
                    android:textSize="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/border_bottom"/>
            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:orientation="horizontal"-->
<!--                android:weightSum="5"-->
<!--                android:gravity="center_vertical">-->

<!--                <TextView-->
<!--                    android:background="#51F1F1F1"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:text="Photo"-->
<!--                    android:layout_weight="2"-->
<!--                    android:textAlignment="viewEnd"-->
<!--                    android:paddingTop="12dp"-->
<!--                    android:paddingRight="12dp"-->
<!--                    android:gravity="end"-->
<!--                    />-->

<!--                <LinearLayout-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight="3"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_gravity="center_vertical">-->

<!--                    <ImageView-->
<!--                        android:id="@+id/upload_popup"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center_vertical"-->
<!--                        android:paddingLeft="5dp"-->
<!--                        android:src="@drawable/ic_camera_alt_black_24dp"/>-->

<!--                </LinearLayout>-->
<!--            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center_vertical">

                <TextView
                    android:background="#51F1F1F1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textAlignment="viewEnd"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <Button
                        android:id="@+id/save"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"></Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:animateLayoutChanges="true"
        android:background="@android:color/black"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait..."
                android:textColor="@color/whitebg"
                />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>